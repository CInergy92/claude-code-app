{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./out/main",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/main/**/*", "src/shared/**/*", "electron.vite.config.ts"]
}
